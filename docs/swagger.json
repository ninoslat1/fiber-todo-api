{
    "swagger": "2.0",
    "info": {
      "title": "Your API Title",
      "description": "Description of your API",
      "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "paths": {
      "/login": {
        "post": {
          "summary": "User login",
          "description": "Authenticates a user and returns a token",
          "consumes": [
            "application/x-www-form-urlencoded"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "UserCode",
              "in": "formData",
              "required": true,
              "type": "string"
            },
            {
              "name": "Password",
              "in": "formData",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Successful login",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "user": {
                    "type": "string"
                  }
                }
              }
            },
            "401": {
              "description": "User not found or password incorrect",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }